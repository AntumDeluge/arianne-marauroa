<?xml version='1.0'?>
<project name="marauroa" default="compile" basedir=".">
  <property name="version" value="0.02"/>
  <property name="src" value="src"/>
  <property name="build" value="build"/>
  <property name="images" value="${build}/images"/>
  <property name="lib"  value="lib"/>
  
  <!-- Modify to point to your junit.jar file -->
  <property name="junitlib" value="D:/j2sdk1.4.2/junit/junit3.8.1/junit.jar"/>
  <property name="classpath"  value="classes;${junitlib}"/>
  
  <property name="jarname" value="marauroa-${version}.jar"/>
  <property name="docs" value="javadocs"/>

  <target name="init">
    <mkdir dir="${build}" />
    <mkdir dir="${images}" />
    <mkdir dir="${lib}" />
    <mkdir dir="${docs}" />
  </target>

  <target name="installation" depends="init">
    <copy todir="${images}">
      <fileset dir="images">
        <include name="**/*.*"/>
	<exclude name="CVS"/>
      </fileset>
    </copy>
    <copy todir="${build}" file="${src}/marauroa.ini"/>
  </target>

  <target name="compile" depends="init,installation">
    <!-- run javac to compile the source files -->
    <javac srcdir="${src}" destdir="${build}">
      <classpath>
        <pathelement path="${classpath}"/>
      </classpath>
    </javac>
  </target>

  <target name="jar" depends="compile">
    <jar jarfile="${lib}/${jarname}" basedir="${build}/"/>
  </target>
  
  <target name="docs" depends="compile">
    <javadoc packagenames="marauroa.*"
           sourcepath="${src}"
           defaultexcludes="yes"
           destdir="${docs}"
           author="true"
           version="true"
           use="true"
           windowtitle="Marauroa API Documentation Version: ${version}">
      <fileset dir="${src}">
          <include name="**/*.java"/>
      </fileset>
    </javadoc>
  </target>
  
  <target name="clean">
    <delete dir="${build}"/>
    <delete dir="${lib}"/>
    <delete dir="${docs}"/>
  </target>
</project>
