<?xml version='1.0'?>
<project name="marauroa" default="compile" basedir=".">
  <property name="version" value="0.90"/>
  <property name="src" value="src"/>
  <property name="extras" value="extras"/>
  <property name="build" value="build"/>
  <property name="lib"  value="lib"/>
  
  <property name="connectorJ_jar" value="mysql-connector.jar"/>
  <property name="jython_jar" value="jython.jar"/>
  
  <property name="connectorJ" value="${libdir}/${connectorJ_jar}"/>
  <property name="jython" value="${libdir}/${jython_jar}"/>
  <property name="classpath" value="${build};${connectorJ};${jython}"/>
  
  <property name="jarname" value="marauroa-${version}.jar"/>
  <property name="docs" value="javadocs"/>

  <target name="clean">
    <delete dir="${build}"/>
    <delete dir="${lib}"/>
    <delete dir="${docs}"/>
  </target>

  <target name="init">
    <mkdir dir="${build}" />
    <mkdir dir="${lib}" />
    <mkdir dir="${docs}" />
  </target>

  <target name="installation" depends="init">
    <copy todir="${build}/marauroa/server/" file="${src}/marauroa/server/marauroa_init.sql"/>
    <copy todir="${build}/marauroa/server/" file="${src}/marauroa/server/marauroa_drop.sql"/>
  </target>

  <target name="compile" depends="installation">
    <replaceregexp file="${src}/marauroa/server/marauroad.java"
                   match="final private static String VERSION=&quot;.*&quot;;"
                   replace="final private static String VERSION=&quot;${version}&quot;;"
                   byline="true"/>
    <javac srcdir="${src}" destdir="${build}" debug="true" debuglevel="source,lines" includes="**/marauroa/**">
      <classpath>
        <pathelement path="${classpath}"/>
      </classpath>    
    </javac>
  </target>

  <target name="jar" depends="compile">
    <jar jarfile="${lib}/${jarname}" basedir="${build}/"/>    
    <copy todir="${lib}" file="${src}/marauroa/marauroa.ini"/>
  </target>

  <target name="release" depends="release_binary,release_source"/>
  
  <target name="release_binary" depends="jar">
    <replaceregexp file="${extras}/marauroad.bat    "
                   match="set LOCALCLASSPATH=.*"
                   replace="set LOCALCLASSPATH=.;marauroa-${version}.jar;${jython_jar};${connectorJ_jar}"
                   byline="true"/>
    <mkdir dir="marauroa-${version}"/>
    <copy todir="marauroa-${version}" file="${extras}/marauroad.bat"/>
    <copy todir="marauroa-${version}" file="${lib}/${jarname}"/>
    <copy todir="marauroa-${version}" file="${connectorJ}"/>
    <copy todir="marauroa-${version}" file="${jython}"/>
    <copy todir="marauroa-${version}" file="${lib}/marauroa.ini"/>
    <copy todir="marauroa-${version}" file="AUTHORS"/>
    <copy todir="marauroa-${version}" file="BUGS"/>
    <copy todir="marauroa-${version}" file="COPYING"/>
    <copy todir="marauroa-${version}" file="LICENSE"/>
    <copy todir="marauroa-${version}" file="README"/>
    <zip destfile="marauroa-${version}.zip" 
         basedir="marauroa-${version}"/>
    <delete dir="marauroa-${version}"/>
  </target>

  <target name="release_source" depends="clean">
    <mkdir dir="marauroa-${version}"/>
    <copy todir="marauroa-${version}/src">
    	<fileset dir="src"/>
    </copy>
    <copy todir="marauroa-${version}/extras">
    	<fileset dir="extras"/>
    </copy>
    <copy todir="marauroa-${version}" file="build.xml"/>
    <copy todir="marauroa-${version}" file="AUTHORS"/>
    <copy todir="marauroa-${version}" file="BUGS"/>
    <copy todir="marauroa-${version}" file="COPYING"/>
    <copy todir="marauroa-${version}" file="LICENSE"/>
    <copy todir="marauroa-${version}" file="README"/>
  	
    <tar destfile="marauroa-${version}-src.tar.gz" compression="gzip">
       <tarfileset dir="marauroa-${version}" prefix="marauroa-${version}">
         <exclude name="**/CVS/**"/>
       </tarfileset>
     </tar>

    <delete dir="marauroa-${version}"/>
  </target>
  
  <target name="docs" depends="compile">
    <javadoc packagenames="marauroa.*"           
           defaultexcludes="yes"
           destdir="${docs}"
           author="true"
           version="true"
           use="true"
	   classpath="${classpath}"
           windowtitle="Marauroa API Documentation Version: ${version}">
      <fileset dir="${src}">
          <include name="**/*.java"/>
      </fileset>
    </javadoc>
  </target>
</project>
