<?xml version='1.0'?>
<project name="marauroa" default="compile" basedir=".">
  <property name="version" value="0.35"/>
  <property name="src" value="src"/>
  <property name="build" value="build"/>
  <property name="images" value="${build}/images"/>
  <property name="sounds" value="${build}/sounds"/>
  <property name="lib"  value="lib"/>
  
  <property name="junitlib" value="${libdir}/junit.jar"/>
  <property name="connectorJ" value="${libdir}/mysql-connector-java-3.1.1-alpha-bin.jar"/>
  <property name="3dloaders" value="${libdir}/StarfireExt.jar:${libdir}/quakeloaders.jar"/>
  <property name="jorbis" value="${libdir}/jogg-0.0.5.jar:${libdir}/jorbis-0.0.12.jar"/>
  <property name="jython" value="${libdir}/jython.jar"/>
  <property name="classpath" value="${build};${junitlib};${connectorJ}:${jorbis}:${3dloaders}:${jython}"/>
  
  <property name="jarname" value="marauroa-${version}.jar"/>
  <property name="docs" value="javadocs"/>

  <!-- set hier what should be build -->
  <property name="build.the1001.client" value="false"/>
  <property name="build.the1001.server" value="true"/> 
  <property name="build.mapacman" value="true"/>

  <target name="init">
    <mkdir dir="${build}" />
    <mkdir dir="${images}" />
    <mkdir dir="${sounds}" />
    <mkdir dir="${lib}" />
    <mkdir dir="${docs}" />
  </target>

  <target name="installation" depends="init">
    <copy todir="${images}">
      <fileset dir="images">
        <include name="**/*.*"/>
	    <exclude name="CVS"/>
      </fileset>
    </copy>
    <copy todir="${sounds}">
      <fileset dir="sounds">
        <include name="**/*.*"/>
	    <exclude name="CVS"/>
      </fileset>
    </copy>
    <copy todir="${build}" file="${src}/marauroa_init.sql"/>
    <copy todir="${build}" file="${src}/marauroa_drop.sql"/>
  </target>

  <target name="compile_marauroa" depends="init">
    <replaceregexp file="${src}/marauroa/marauroad.java"
                   match="final private static String VERSION=&quot;.*&quot;;"
                   replace="final private static String VERSION=&quot;${version}&quot;;"
                   byline="true"/>
    <javac srcdir="${src}/marauroa" destdir="${build}" debug="true" debuglevel="source,lines">
      <classpath>
        <pathelement path="${classpath}"/>
      </classpath>
    </javac>
  </target>

  <target name="compile_the1001_client" depends="compile_the1001_server" if="build.the1001.client">
    <javac srcdir="${src}/the1001/client" destdir="${build}" debug="true" debuglevel="source,lines">
      <classpath>
        <pathelement path="${classpath}"/>
      </classpath>
    </javac>
  </target>

  <target name="compile_the1001_server" depends="compile_marauroa" if="build.the1001.server">
    <javac srcdir="${src}/the1001" destdir="${build}" debug="true" 
           debuglevel="source,lines" excludes="${src}/the1001/client/**/*.java">
      <classpath>
        <pathelement path="${classpath}"/>
      </classpath>
    </javac>
  </target>


  <target name="compile_mapacman" depends="compile_marauroa" if="build.mapacman">
    <javac srcdir="${src}/mapacman" destdir="${build}" debug="true" debuglevel="source,lines">
      <classpath>
        <pathelement path="${classpath}"/>
      </classpath>
    </javac>
  </target>

  <target 
    name="compile_new" 
    depends="init,installation,compile_marauroa,compile_the1001_server,compile_the1001_client,compile_mapacman">
  </target>
  
  <target name="compile" depends="init,installation">
    <condition property="exclude.mapacman" value="**/mapacman/*.*">
      <not>
       <available file="${jython}"/>
      </not>
    </condition>

    <condition property="exclude.the1001.client" value="**/the1001/client/*.*">
      <not>
       <available file="${the1001jar}"/>
      </not>
    </condition>
		    
    <!-- run javac to compile the source files -->
    <javac srcdir="${src}" destdir="${build}" debug="true" debuglevel="source,lines" excludes="${exclude.the1001.client},${exclude.mapacman}">
      <classpath>
        <pathelement path="${classpath}"/>
      </classpath>
    </javac>
  </target>

  <target name="jar" depends="compile">
    <jar jarfile="${lib}/${jarname}" basedir="${build}/"/>

    <copy todir="${lib}" file="${src}/mapacman/mapacman_script.py"/>
    <copy todir="${lib}" file="${src}/mapacman/map_definition.txt"/>
    <copy todir="${lib}" file="${src}/mapacman/mapacman.ini"/>
    
    <copy todir="${lib}" file="${src}/marauroa.ini"/>
    <copy todir="${lib}" file="${src}/the1001/the1001.ini"/>
  </target>
  
  <target name="docs" depends="compile">
    <javadoc packagenames="marauroa.*"
           sourcepath="${src}"
           defaultexcludes="yes"
           destdir="${docs}"
           author="true"
           version="true"
           use="true"
           windowtitle="Marauroa API Documentation Version: ${version}">
      <fileset dir="${src}">
          <include name="**/*.java"/>
      </fileset>
    </javadoc>
  </target>

  <target name="test" depends="jar">
  <!-- Create a JUnit task to run tests -->
  </target>
  
  
  <target name="clean">
    <delete dir="${build}"/>
    <delete dir="${lib}"/>
    <delete dir="${docs}"/>
  </target>
</project>
